<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="test"/>

    <dubbo:registry address="localhost:2181" protocol="zookeeper" />

    <dubbo:reference cluster="failback" timeout="2000" interface="com.lance.dubbo.provider.ProviderService" id="provider" />

    <bean id="consumer" class="com.lance.dubbo.consumer.impl.ConsumerServiceImpl">
        <property name="providerService" ref="provider"/>
    </bean>
</beans>