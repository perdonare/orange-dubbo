<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-provider" />

    <dubbo:registry address="localhost:2181" protocol="zookeeper" />

    <!-- 容错策略  failover -->
    <!--<dubbo:service cluster="failover"  retries="10"  interface="com.lance.dubbo.provider.ProviderService" ref="provider" />-->

    <!-- failfast -->
    <!--<dubbo:service cluster="failfast"  retries="10"  interface="com.lance.dubbo.provider.ProviderService" ref="provider" />-->

    <!-- failsafe-->
    <dubbo:service cluster="failsafe"  retries="10"  interface="com.lance.dubbo.provider.ProviderService" ref="provider" />

    <bean id="provider" class="com.lance.dubbo.provider.impl.ProviderServiceImpl"/>

</beans>