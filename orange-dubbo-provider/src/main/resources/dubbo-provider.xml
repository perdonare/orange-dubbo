<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-provider" />

    <dubbo:registry  address="localhost:2181" protocol="zookeeper" />

    <!-- 分发模式为直接调用，不使用线程池-->
    <!--<dubbo:protocol dispatcher="direct"  />-->

    <!--分发模式为把所有的时间包括消息全部都放到线程池里面去-->
    <dubbo:protocol dispatcher="all"  />

    <dubbo:provider port="20885"/>

    <dubbo:service interface="com.lance.dubbo.provider.ProviderService" ref="provider" />

    <bean id="provider" class="com.lance.dubbo.provider.impl.ProviderServiceImpl"/>

</beans>