<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-provider" />

    <!--一个注册 一个不注册 -->
    <!--<dubbo:registry  address="localhost:2181" protocol="zookeeper" />-->
    <dubbo:registry  address="localhost:2181" protocol="zookeeper" register="false"/>


    <!--<dubbo:provider port="20885"/>-->
    <dubbo:provider port="20886"/>

    <dubbo:service interface="com.lance.dubbo.provider.ProviderService" ref="provider" />

    <bean id="provider" class="com.lance.dubbo.provider.impl.ProviderServiceImpl"/>

</beans>