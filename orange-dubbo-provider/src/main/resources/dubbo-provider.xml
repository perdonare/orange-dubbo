<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-provider" />
    <!--默认使用zkclient作为 -->
    <!--<dubbo:registry address="localhost:2181" protocol="zookeeper" />-->
    <!--使用curator作为客户端-->
    <!--<dubbo:registry address="localhost:2181" protocol="zookeeper" client="curator" />-->
    <!--自定义dubbo使用的命名空间-->
    <!--<dubbo:registry address="localhost:2181" protocol="zookeeper" client="curator" group="lance"/>-->

    <dubbo:registry timeout="5000" address="localhost:2182,localhost:2183,localhost:2184" protocol="zookeeper" client="curator" group="lance"/>
    <dubbo:service   interface="com.lance.dubbo.provider.ProviderService" ref="provider" />

    <bean id="provider" class="com.lance.dubbo.provider.impl.ProviderServiceImpl"/>

</beans>