<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="dubbo-provider" />

    <dubbo:registry address="localhost:2181" protocol="zookeeper" />
    <!--<dubbo:provider port="20881"/>-->
    <!--<dubbo:provider port="20882"/>-->
    <!--<dubbo:provider port="20883"/>-->
    <!--<dubbo:provider port="20884"/>-->
    <dubbo:provider port="20885"/>

    <dubbo:service    interface="com.lance.dubbo.provider.ProviderService" ref="provider" />

    <bean id="provider" class="com.lance.dubbo.provider.impl.ProviderServiceImpl"/>

</beans>